{
  "name": "valantis-zervos-personal-website",
  "version": "2.0.0",
  "description": "Enhanced personal webpage/portfolio for Valantis Zervos - Computer Science postgraduate student at University of Crete",
  "main": "index.js",
  "scripts": {
    "serve": "python -m http.server 8000",
    "serve-node": "npx http-server -p 8000",
    "build": "echo 'Website is ready for deployment'",
