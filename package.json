    "lint": "npx stylelint 'css/**/*.css' && npx eslint 'js/**/*.js'",
    "test": "echo 'No tests specified' && exit 0",
    "optimize": "echo 'Running optimizations...' && open index.html",
    "start": "npm run serve"
  },
  "keywords": [
    "personal-website",
    "portfolio",
    "computer-science",
    "university-of-crete",
    "forth",
    "research",
    "web-development"
