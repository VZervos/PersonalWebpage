  "repository": {
    "type": "git",
    "url": "git+https://github.com/VZervos/personal-webpage.git"
  },
  "homepage": "https://vzervos.github.io/personal-webpage",
  "devDependencies": {
    "html-validate": "^8.0.0",
    "stylelint": "^15.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
